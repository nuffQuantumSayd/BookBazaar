@model BookBazaar.Models.Book

@{
    ViewData["Title"] = "BookDescription";
}

<div class="d-container">
    <div class="book-details">
        <img class="book-cover" src="/images/@Model.Image" alt="Book Cover">
        <div>
            <h2>@Model.Title</h2>
            <p class="description">ISBN: @Model.ISBN</p>
            <p class="author">@Model.Author</p>
            <p class="description">@Model.Description</p>
            <p class="description">@Model.Genre</p>
            <p class="description">@Model.Quantity</p>
            <p class="description">@Model.Price.ToString("c")</p>
            <form id="@Model.Id" asp-page="/Cart" method="post">
                <input type="hidden" asp-for="@Model.Id" />
                <input type="hidden" name="returnUrl"
                       value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <button type="submit"
                        class="product_grid_item_cart_button">
                    Add To Cart
                </button>
                <a style="display:inline; float:right" asp-action="AvailableBooks"><button class="product_grid_item_cart_button">Back to List</button></a>
            </form>
        </div>
    </div>
</div>

