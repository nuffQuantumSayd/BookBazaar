@model BookBazaar.Models.Book


<div class="card text-center col-sm-4" style="width:18rem;">
    <img src="/Images/@Model.Image" class="card-img-top" alt="Book Image">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <!-- If quantity is 0 then display item out of stock, otherwise display in stock with quantity -->
        @if (Model.Quantity < 1)
        {
            <p class="card-text">Out of Stock</p>
        }
        else
        {
            <p class="card-text">In Stock: @Model.Quantity</p>
        }
        <p class="card-text">$@Model.Price</p>

        @* <a href="#" class="btn btn-primary">Add to Cart</a> *@
        <!-- Add to cart button -->
        <form id="@Model.Id" asp-page="/Cart" method="post">
            <input type="hidden" asp-for="@Model.Id" />
            <input type="hidden" name="returnUrl"
                    value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                @Model.Description
                <br />
                <button type="submit"
                        class="btn btn-success btn-sm ">
                    Add To Cart
                </button>
            </span>
        </form>

    </div>
</div>

