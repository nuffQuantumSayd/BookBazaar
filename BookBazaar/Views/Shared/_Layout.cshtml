<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookBazaar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookBazaar.styles.css" asp-append-version="true" />
    <!--Google Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <div class="header_menu">
            <div class="header_menu_logo poppins-medium">BookBazaar</div>
            <div class="header_menu_links">
                <div class="header_menu_pages poppins-medium">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                    <a href="#">About</a>
                    <a href="#">Contact</a>
                    @if (User.IsInRole("Administrator"))
                    {
                        <a asp-controller="Books" asp-action="Index">Admin</a>
                    }
                </div>
            </div>
            <div class="header_menu_icons">
                <partial name="_LoginPartial" />
                <a asp-page="/Cart">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="black" class="bi bi-cart" viewBox="0 0 16 16">
                        <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0
                    0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l1.313 7h8.17l1.313-7zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0
                    0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                    </svg>
                </a>
            </div>
        </div>
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer_container">
            <div class="footer_business_info">
                <p class="poppins-bold">BookBazaar.</p>
                <p class="poppins-regular">
                    1234 Book St
                    <br />
                    Book City, Book State
                    <br />
                    123-456-7890
                </p>
            </div>
            <div class="footer_links poppins-regular">
                <p>Links</p>
                <p>
                    <a asp-controller="Home" asp-action="Index">
                        Home
                    </a>
                </p>
                <p>
                    <a href="#">
                        Shop
                    </a>
                </p>
                <p>
                    <a href="#">
                        About
                    </a>
                </p>
                <p>
                    <a href="#">Contact</a>
                </p>
            </div>
            <div class="footer_help poppins-regular">
                <p>Help</p>
                <p>
                    <a href="#">
                        Payment Options
                    </a>
                </p>
                <p>
                    <a href="#">
                        Returns
                    </a>
                </p>
                <p>
                    <a href="#">Privacy Policies</a>
                </p>
            </div>
            <div class="footer_newsletter poppins-regular">
                <p>newsletter</p>
                <div class="newsletter_form">
                    <input class="poppins-regular" type="text" placeholder="Enter Your Email"></input>
                    <button type="submit" class="poppins-medium">Subscribe</button>
                </div>
            </div>
        </div>
        <hr>
        <p class="footer_copyright poppins-regular">
            2024 BookBazaar. All rights reserved.
        </p>
    </footer>
    <script>
        function displayMenu() {
            var l = document.getElementsByClassName("header_menu_links");
            var i = document.getElementsByClassName("header_menu_icons");
            var m = document.getElementsByClassName("header_menu_mobile");

            if (l.style.display === "block" && i.style.display === "block" {
                l.style.display = "none";
                i.style.display = "none";
            } else {
                l.style.display = "block";
                i.style.display = "block";
            }
        }
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
